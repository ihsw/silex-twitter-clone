{% extends "base.html.twig" %}
{% block content %}
    <h2>Hello {{ username }}!</h2>
    <form action="{{ path("create") }}" method="post">
        <label>Content: <input type="text" name="content"></label>
        <input type="submit">
    </form>
    {% if posts %}
        <ul>
            {% for post in posts %}
                <li>{{ post.content }} ({{ post.occurredAt|date("F j, Y g:ia") }})</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}